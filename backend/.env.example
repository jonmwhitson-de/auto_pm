# Application
DEBUG=true
APP_NAME="Auto PM"

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/autopm

# LLM Configuration
# Options: "stub" (for development) or "azure_openai" (for production)
LLM_PROVIDER=stub

# Azure OpenAI (required when LLM_PROVIDER=azure_openai)
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Sprint defaults
DEFAULT_SPRINT_LENGTH_DAYS=14
